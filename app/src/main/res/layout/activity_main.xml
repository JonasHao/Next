<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/background_panel"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="@string/song_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_title"
        android:layout_below="@+id/textView_title"
        android:text="@string/singer"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <co.mobiwise.library.MusicPlayerView
        android:id="@+id/mpv"
        android:layout_width="@dimen/cover_size"
        android:layout_height="@dimen/cover_size"

        app:buttonColor="@color/colorAccent"
        app:cover="@drawable/jeslie_cheung"
        app:progressEmptyColor="@color/colorProgressEmpty"
        app:progressLoadedColor="@color/colorProgressLoaded"
        android:layout_below="@+id/textView_artist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />


    <ImageButton
        android:id="@+id/previous"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_previous"
        android:layout_below="@+id/mpv"
        android:layout_alignStart="@+id/mpv"
        android:layout_marginTop="@dimen/buttons_align_top"
        android:clickable="true"
        android:adjustViewBounds="false" />

    <ImageButton
        android:id="@+id/like"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_like"
        android:layout_below="@+id/mpv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/buttons_align_top"/>


    <ImageButton
        android:id="@+id/next"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_next"
        android:layout_below="@+id/mpv"
        android:layout_alignEnd="@+id/mpv"
        android:layout_marginTop="@dimen/buttons_align_top"/>




</RelativeLayout>
